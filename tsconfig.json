{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "#auth/*": ["./app/auth/*.js"],
      "#blog/*": ["./app/blog/*.js"],
      "#common/*": ["./app/common/*.js"],
      "#core/*": ["./app/core/*.js"],
      "#pages/*": ["./app/pages/*.js"],
      "#paste/*": ["./app/paste/*.js"],
      "#redirects/*": ["./app/redirects/*.js"],
      "#start/*": ["./start/*.js"],
      "#config/*": ["./config/*.js"],
      "#types/*": ["./types/*.js"],
      "#views/*": ["./resources/views/*.js"],
    },
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment",
    "plugins": [{ "name": "@kitajs/ts-html-plugin" }]
  }
}
